# Core
APP_PORT=8000
DOCKER_NETWORK="aceserver"
MIN_REPLICAS=10
MAX_REPLICAS=50
CONTAINER_LABEL=orchestrator.managed=acestream
STARTUP_TIMEOUT_S=25
IDLE_TTL_S=600

# Stats collector
COLLECT_INTERVAL_S=5
STATS_HISTORY_MAX=720

# Reliability & Monitoring
MONITOR_INTERVAL_S=10
ENGINE_GRACE_PERIOD_S=30
AUTOSCALE_INTERVAL_S=30

# Performance Optimization
MAX_CONCURRENT_PROVISIONS=5
MIN_PROVISION_INTERVAL_S=0.5

# Dynamic ports
PORT_RANGE_HOST=19000-19199
ACE_HTTP_RANGE=40000-44999
ACE_HTTPS_RANGE=45000-49999
ACE_MAP_HTTPS=false

# Security
API_KEY=defaultpassword

# Persistence
DB_URL=sqlite:///./orchestrator.db

# Auto-delete (non minimum) container when stream ends
AUTO_DELETE=true

# Engine provisioning rate limiting  
MAX_CONCURRENT_PROVISIONS=10
MIN_PROVISION_INTERVAL_S=0.5
MAX_ACTIVE_REPLICAS=20

# Other
TZ=Europe/Madrid
ENGINE_VARIANT=jopsis-arm32
ENGINE_ARM32_VERSION=arm32-v3.2.14

# Debug Mode
DEBUG_MODE=false
DEBUG_LOG_DIR=/debug_logs